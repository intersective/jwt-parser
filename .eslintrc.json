{
    "extends": "strongloop",
    "rules": {
        "max-len": [1, 120, 2, {
            "ignorePattern": "^import\\s.+\\sfrom\\s.+;$",
            "ignoreUrls": true
        }],
        "indent": ["error", 2]
    },
    "parserOptions": {
        "ecmaVersion": 2017
    },

    "env": {
        "es6": true
    }
}
